<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="Windore.Simulations2D.GUI.PopupWindow"
        Title="" WindowStartupLocation="CenterScreen"
		Width="400" SizeToContent="Height" Padding="10">

	<StackPanel Width="390" Margin="5">
		<TextBlock FontSize="14" TextWrapping="Wrap" Name="messageTB"/>
		<TextBlock FontStyle="Italic" Foreground="Red" FontSize="11" TextWrapping="Wrap" Name="errorTB"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="40">
			<Button Width="50" Height="30" Name="okBtn">Ok</Button>
			<Button Width="50" Height="30" Name="yesBtn">Yes</Button>
			<Button Width="50" Height="30" Name="noBtn">No</Button>
		</StackPanel>
	</StackPanel>
</Window>