<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        xmlns:controls="clr-namespace:Windore.Simulations2D.GUI"
        x:Class="Windore.Simulations2D.GUI.SimulationWindow"
        Title="SimulationWindow" CanResize="True" Width="1250" Height="800" Name="window">
  <Grid ColumnDefinitions="200,Auto,50" RowDefinitions="Auto">
    <StackPanel Grid.Column="0">
      <TextBlock>Test text</TextBlock>
    </StackPanel>
    <StackPanel Orientation="Vertical" Width="{Binding #scrollViewer.Width}" Height="{Binding #window.Height}" Grid.Column="1">
      <StackPanel Orientation="Horizontal">
        <Button Click="SwitchViewMode" Name="scaleSwitchBtn"></Button>
        <Button Click="SwitchPause" Name="pauseSwitchBtn"></Button>
        <Button Click="AdvanceOneUpdate">Advance one update</Button>
      </StackPanel>
      <ScrollViewer Width="1000" Height="750" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" Name="scrollViewer">
        <controls:SimulationView Name="simulationView"/>
      </ScrollViewer>
    </StackPanel>
  </Grid>
</Window>
